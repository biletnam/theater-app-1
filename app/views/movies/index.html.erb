<h1>Currently Playing:</h1>

<div>
	<% @movies.each do |movie| %>
		<ul>
			<h2><%= movie.title %></h2>
			<p>Run Time: <%= movie.run_time %></p>
			<% movie.unique_showdates.each do |showdate| %>
				<li>
					<h3><%= showdate.strftime("%a, %b %e") %></h3>
					<ul>
						<% movie.showtimes_on_date(showdate).each do |showtime| %>
							<li><%= showtime.time.strftime("%l:%M %p") %></li>
						<% end %>
					</ul>
				</li>
			<% end %>
		</ul>
	<% end %>
</div>