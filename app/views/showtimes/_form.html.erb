<%= form_for @showtime do |f| %>
	Film: <%= select "showtime", "movie_id", @movies.collect { |movie| [movie.title, movie.id] } %>
	Auditorium: <%= select "showtime", "auditorium_id", @auditoria.collect { |auditorium| [auditorium.name, auditorium.id] } %>
	Date: <%= date_select("showtime", "date" ) %>
	Time: <%= time_select("showtime", "time", ampm: true ) %>
	<%= f.submit id: "submit_btn" %>
<% end %>