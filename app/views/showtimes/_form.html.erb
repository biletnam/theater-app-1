<%= form_for @showtime do |f| %>
	Film: <%= select "showtime", "movie_id", Movie.all.collect { |movie| [movie.title, movie.id] } %>
	Auditorium: <%= select "showtime", "auditorium_id", Auditorium.all.collect { |auditorium| [auditorium.name, auditorium.id] } %>
	Date: <%= date_select("showtime", "date" ) %>
	Time: <%= time_select("showtime", "time", ampm: true ) %>
	<%= f.submit 'Create' %>
<% end %> 